  },
  "repository": {
    "type": "git",
    "url": "github.com:DevsDigest/api"
  },
  "keywords": [
    "api",
    "facebook",
    "bot",
    "messenger"
  ],
  "author": "Tiago Celestino",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.18.2",
    "express": "4.16.2",
    "mongoose": "4.12.4",
    "request": "2.83.0"
  },
  "devDependencies": {
    "localtunnel": "1.8.3",
    "nodemon": "1.12.1"
  }
}
