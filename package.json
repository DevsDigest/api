  "description": "API for Devs Digest bot on Messenger",
  "main": "index.js",
  "scripts": {
    "postinstall": "cp -Ri config.json.example config.json",
    "start": "node index",
    "localtunnel": "lt --port 5000 --subdomain devdigestapi",
